# Development/Testing Environment Variables
# Copy this to .env.dev for local development and testing

# Required for E2E tests
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Optional
GOOGLE_API_KEY=your_google_api_key_here
LOGFIRE_TOKEN=optional_token

# Database (tests use in-memory SQLite automatically)
DATABASE_URL=sqlite:///./test.db

# Application Settings
DEBUG=true
MAX_TIMEPOINTS_PER_HOUR=100
JUDGE_MODEL=gemini-1.5-flash
IMAGE_MODEL=google/gemini-2.5-flash-image

# Security (for testing - use a simple key)
SECRET_KEY=test-secret-key-for-development-only
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:4321"]
